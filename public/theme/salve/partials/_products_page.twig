{% setcontent products = 'product-articles' orderby 'id' %}

{% if products|length > 0 %}
    {% for product in products %}

        {% if loop.first %}
            <section aria-label="design section" class="relative px-8 sm:px-16 pt-32 pb-48 flex flex-col justify-center relative brand-blue-bg text-white">
                <div class="absolute left-1/2 top-0 z-10 w-24 h-24">
                    <img class="absolute z-10 -top-12 -left-12" src="{{ asset('images/circle.svg') }}" alt="">
                </div>
                <div class="absolute left-1/2 top-0 w-24 h-24">
                    <img class="absolute z-10 top-12 -left-0.5" src="{{ asset('images/dashed-line.svg') }}" alt="">
                </div>
                <div class="hidden lg:block absolute left-1/2 top-60 w-24 h-24">
                    <img class="absolute z-10 top-12 -left-0.5" src="{{ asset('images/dashed-line.svg') }}" alt="">
                </div>

                <div class="mx-auto w-full max-w-screen-xl relative z-10 flex flex-col lg:grid lg:grid-cols-2 justify-items-end gap-8">
                    <img class="" src="{{ product|image }}" alt="{{ product.image.alt }}">
                    <div>
                        <h2 class="text-4xl relative">{{ product.title }}</h2>
                        <p class="mt-8 mb-16">{{ product.teaser|striptags }}</p>

                    </div>
                </div>
                <div class="absolute bottom-0 brand-blue-bg h-8 w-full z-10"></div>
                <div class="absolute left-1/2 bottom-32 lg:bottom-0 w-24 h-24">
                    <img class="absolute -left-0.5 overflow-y-hidden" src="{{ asset('images/dashed-line.svg') }}" alt="">
                </div>
            </section>

            <section aria-label="features section" class="px-8 sm:px-16 pt-16 pb-32 flex justify-center relative z-20 bg-white">
                <div class="absolute left-1/2 w-64 h-40 top-8 z-0">
                    <img class="absolute ml-1.5 -left-32 z-0" src="{{ asset('images/bg-arrow.svg') }}" alt="">
                </div>
                <div class="w-full max-w-screen-md z-10 m-auto">
                    <h2 class="text-4xl text-white pt-3.5  relative text-center -top-28">Komponenter</h2>
                    <div class="flex flex-wrap justify-evenly gap-8 mt-32 dashed-bg pt-8">
        {% else %}
            <!-- CARD -->
            <div class="flex flex-col gap-4 w-56 shadow-md p-6 bg-white product-card">
                <!-- card-header -->
                <div class="flex gap-2 items-baseline text-yellow-600"><i class="{{ product.faicon }}"></i><h3>{{ product.title }}</h3></div>
                <p class="text-sm">{{ product.teaser|striptags }}</p>
            </div>
        {% endif %}
        {% if loop.last %}
                    </div>
                </div>
                <div class="absolute h-0.5 w-1/2 bottom-0 left-1/4 bg-gray-100"></div>
            </section>
        {% endif %}
    {% endfor %}
{% endif %}